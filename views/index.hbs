<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Dofus Together</title>
  </head>
  <body>
    <div>
      <ul>
        {{#each quests}}
          <li>{{this.quest.Name}} - {{this.User.Pseudo}}</li>
        {{/each}}
      </ul>
    </div>

    <div>
      <form action="/pool" method="post">
        <p>
          <label for="pseudo">Pseudo</label>
          <input type="text" id="pseudo" />
        </p>
        <p>
          <label for="quest">Quest</label>
          <input type="text" id="quest" />
        </p>
        <button type="submit">Save</button>
      </form>
    </div>
  </body>
</html>
